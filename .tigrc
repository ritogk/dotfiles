# push
# set key 'P'
bind status P ?git push -u %(remote) %(repo:head)

# set key 'U'
bind status U ?git pull %(remote)

# set key 'F'
bind status F ?git fetch %(remote)
bind main F ?git fetch %(remote)

# viewに表示される日時のフォーマット
set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
set refs-view-date = custom
set refs-view-date-format = "%Y-%m-%d %H:%M

# マウスを有効にする
set mouse = true
